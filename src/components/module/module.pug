    form.booking-module__form

      .booking-module__form-input-wrapper
        label(for="check_in") Заезд
        input#check_in(type="date" name="check_in")

      .booking-module__form-input-wrapper
        label(for="departure") Выезд
        input#departure(type="date" name="departure" )

      .booking-module__form-input-wrapper.booking-module__form-input-wrapper--guests
        label(for="guests") Гости
        select#guests
          option(value="2 взрослых, 0 детей") 2 взрослых, 0 детей
          option(value="2 взрослых, 1 ребенок") 2 взрослых, 1 ребенок
          option(value="2 взрослых, 2 детей") 2 взрослых, 2 детей
          option(value="2 взрослых, 3 детей") 2 взрослых, 3 детей


      button.booking-module__form-button(type="submit") найти номер
